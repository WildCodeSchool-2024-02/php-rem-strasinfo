<div class="uk-card uk-card-default uk-card-body">
	<form class="uk-form-stacked" action="" method="post" enctype="multipart/form-data">
		<input type="hidden" name="id" value="{{ service.id }}">

		<div class="uk-margin-small">
			<label class="uk-form-label" for="name">Nom</label>
			<div class="uk-form-controls">
				<input class="uk-input" id="name" name="name" type="text" placeholder="Le nom du service" value="{{ service.name }}" required>
			</div>
		</div>

		<div class="uk-margin-small">
			<label class="uk-form-label" for="description">Description</label>
			<div class="uk-form-controls">
				<textarea id="summernote" class="uk-textarea" id="description" name="description" rows="5">{{ service.description }}</textarea>
			</div>
		</div>

		<div class="uk-margin-small">
			<label class="uk-form-label" for="price">Le prix du service</label>
			<div class="uk-form-controls">
				<input class="uk-input uk-form-small" id="price" name="price" value="{{service.price}}" type="number">
			</div>
		</div>

		<div class="uk-margin">
			<div uk-form-custom>
				<input type="file" name="image" value="{{service.image}}" aria-label="Custom controls">
				<button class="uk-button uk-button-default" type="button" tabindex="-1">Choisir un fichier</button>
			</div>
		</div>

		<div class="uk-margin-small">
			<button class="uk-button uk-button-primary" type="submit">Enregistrer</button>
		</div>
	</form>
</div>
