{% extends 'layout.html.twig' %}

{% block content %}
	<div class="uk-container">
		<h2 class="uk-text-center">Se connecter</h2>
		<form class="uk-form-stacked" method="post">
			<div class="uk-margin">
				<label class="uk-form-label" for="username">Email</label>
				<div class="uk-form-controls">
					<input class="uk-input" id="username" type="email" name="email" placeholder="test@test.com">
				</div>
			</div>

			<div class="uk-margin">
				<label class="uk-form-label" for="password">Mot de passe</label>
				<div class="uk-form-controls">
					<input class="uk-input" id="password" type="password" name="password" placeholder="Votre mot de passe">
				</div>
			</div>

			<div class="uk-margin">
				<button class="uk-button uk-button-primary" type="submit">Se connecter</button>
			</div>
		</form>
	</div>
{% endblock %}
