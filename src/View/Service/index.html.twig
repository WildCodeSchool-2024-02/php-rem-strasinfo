{% extends 'layout.html.twig' %}

{% block content %}
	<h1 class="uk-margin-medium-top uk-text-center">Les services que nous proposons</h1>
	<div class="uk-child-width-1-3 uk-text-center uk-margin-medium-top" uk-grid>
		{% for service in services %}
			<div>
				<div class="uk-card uk-card-default uk-card-body">
					<h3 class="uk-card-title">{{ service.name }}</h3>
					<p>{{ service.description }}</p>
					<p>{{ service.price }}</p>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
